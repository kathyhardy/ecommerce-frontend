// Firestore Security Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles collection
    match /users/{userId} {
      // Allow read/write only if the user is authenticated
      // and the document ID matches their UID
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Example: products collection (publicly readable, adminâ€‘only write)
    match /products/{productId} {
      allow read: if true; // anyone can read products
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Example: orders collection (user can only access their own orders)
    match /orders/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}